generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum MealCategory {
  BREAKFAST
  MORNING
  LUNCH
  AFTERNOON
  DINNER
  EVENING
}

model User {
  id                    String       @id @default(cuid())
  email                 String       @unique
  passwordHash          String
  currentWeight         Float?
  targetWeight          Float?
  targetCalorieDeficit  Int?
  createdAt             DateTime     @default(now())

  weights               DailyWeight[]
  foodEntries           FoodEntry[]
}

model DailyWeight {
  id       String   @id @default(cuid())
  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId   String
  date     DateTime
  weight   Float
  createdAt DateTime @default(now())

  @@unique([userId, date])
}

model FoodEntry {
  id        String       @id @default(cuid())
  user      User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  date      DateTime
  label     String
  calories  Int
  meal      MealCategory
  createdAt DateTime @default(now())

  @@index([userId, date])
}
