# Backend environment variables (used when running backend directly without devcontainer).
# For devcontainer, set values in repo root `.env` and rebuild.

# Database connection
DATABASE_URL=postgresql://user:password@localhost:5432/fitness_app?schema=public

# Session
SESSION_SECRET=change-me

# Comma-delimited allowlist for browser origins when the frontend is served from a different origin.
# Defaults to http://localhost:5173 in development when unset.
# Example: CORS_ORIGINS=http://localhost:5173,https://calibratehealth.app
# CORS_ORIGINS=http://localhost:5173

# Development convenience: automatically logs in the deterministic seeded test user.
AUTO_LOGIN_TEST_USER=false

# Session cookie configuration (optional).
# If you run multiple environments under the same base domain (e.g. prod at calibratehealth.app
# and staging at staging.calibratehealth.app) and set SESSION_COOKIE_DOMAIN=calibratehealth.app,
# use distinct cookie names to avoid collisions in the browser.
# SESSION_COOKIE_NAME=cal.sid
# SESSION_COOKIE_NAME=cal.staging.sid
# If the API is hosted on a subdomain (e.g. api.calibratehealth.app), set the base domain so the
# browser will send the session cookie to both the SPA and API hosts.
# SESSION_COOKIE_DOMAIN=calibratehealth.app
# SESSION_COOKIE_DOMAIN=staging.calibratehealth.app
# SESSION_COOKIE_SAMESITE=lax
# SESSION_COOKIE_SECURE=false

# Server
PORT=3000

# Food data providers
# Options: fatsecret (default), openfoodfacts, usda
FOOD_DATA_PROVIDER=fatsecret
# FatSecret API credentials (required only if FOOD_DATA_PROVIDER=fatsecret)
FATSECRET_CLIENT_ID=
FATSECRET_CLIENT_SECRET=
# USDA FoodData Central API key (required only if FOOD_DATA_PROVIDER=usda)
USDA_API_KEY=

# Web push (VAPID) configuration (required to send push notifications).
WEB_PUSH_PUBLIC_KEY=
WEB_PUSH_PRIVATE_KEY=
WEB_PUSH_SUBJECT=mailto:you@example.com
