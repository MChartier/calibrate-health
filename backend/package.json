{
  "name": "backend",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "prebuild": "npm run prisma:generate",
    "build": "tsc -p tsconfig.build.json",
    "db:migrate": "prisma migrate deploy",
    "db:migrate:dev": "prisma migrate dev",
    "db:reset": "prisma migrate reset",
    "db:push:reset": "prisma db push --force-reset",
    "db:seed": "ts-node prisma/seed.ts",
    "db:studio": "prisma studio",
    "prisma:generate": "prisma generate",
    "start": "node dist/backend/src/index.js",
    "start:prod": "bash scripts/start-prod.sh",
    "pretest": "npm run prisma:generate",
    "test": "node -r ts-node/register --test",
    "pretest:coverage": "npm run prisma:generate",
    "test:coverage": "c8 node -r ts-node/register --test",
    "dev": "nodemon --watch src --ext ts,json --exec ts-node src/index.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@prisma/adapter-pg": "^7.1.0",
    "@prisma/client": "^7.1.0",
    "bcryptjs": "^3.0.3",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-session": "^1.18.2",
    "passport": "^0.7.0",
    "passport-local": "^1.0.0",
    "pg": "^8.14.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/express-session": "^1.18.2",
    "@types/node": "^24.10.1",
    "@types/passport": "^1.0.17",
    "@types/passport-local": "^1.0.38",
    "@types/pg": "^8.15.4",
    "c8": "^10.1.3",
    "nodemon": "^3.1.11",
    "prisma": "^7.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "c8": {
    "all": true,
    "reporter": [
      "text-summary",
      "html"
    ],
    "reports-dir": "coverage",
    "src": [
      "src",
      "../shared"
    ],
    "include": [
      "**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "exclude-after-remap": true
  }
}
